@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Updation Log Monitor";
}

<div class="content-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary fw-bold">
            <i class="fas fa-microchip me-3"></i>Updation Log Monitor
        </h2>
        <small class="text-muted">Global search across all executions in selected date range</small>
    </div>

    <!-- Date Range Form -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white fw-bold">
            Select Date Range
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "ProcedureMonitor", FormMethod.Post, new { @class = "row g-3 align-items-end" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-4">
                    <label class="form-label fw-bold">From Date</label>
                    <input type="date" name="fromDate" class="form-control form-control-lg" value="@ViewBag.FromDate" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">To Date</label>
                    <input type="date" name="toDate" class="form-control form-control-lg" value="@ViewBag.ToDate" required />
                </div>
                <div class="col-md-4 text-md-end">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-check me-2"></i>Confirm
                    </button>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.ShowResults == true)
    {
        <!-- Global Live Search -->
        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white fw-bold">
                Search Procedure (Filters all records instantly)
            </div>
            <div class="card-body">
                <input type="text" id="globalSearch" class="form-control form-control-lg"
                       placeholder="Type any part of procedure name..." autocomplete="off" />
            </div>
        </div>

        <!-- Table -->
        <div class="card shadow">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-2"></i>Execution Details</h5>
                <small id="recordInfo">
                    Showing @ViewBag.TotalRecords record(s)
                </small>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="executionTable">
                        <thead class="bg-light text-dark fw-semibold">
                            <tr>
                                <th class="text-center" style="width:80px;">S.No</th>
                                <th>Module / Procedure Name</th>
                                <th class="text-center">In Time</th>
                                <th class="text-center">Out Time</th>
                                <th class="text-center" style="width:160px;">Status</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            @if (Model == null || Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fas fa-info-circle fa-4x mb-3 text-primary"></i>
                                        <h5>No records found</h5>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    string rowClass = item.IsRunningToday ? "table-success" : "table-danger";

                                    <tr class="@rowClass" data-module="@item.ModuleName.ToLower()">
                                        <td class="text-center fw-bold serial-no"></td>
                                        <td class="fw-medium">@item.ModuleName</td>
                                        <td class="text-center">@(string.IsNullOrEmpty(item.InTime) ? "-" : item.InTime)</td>
                                        <td class="text-center">
                                            @if (item.OutTime == null)
                                            {
                                                <i class="fas fa-times-circle text-danger" style="font-size: 2rem;" title="Out Time Missing"></i>
                                            }
                                            else
                                            {
                                                @item.OutTime
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @(item.IsRunningToday ? "bg-success" : "bg-danger") px-4 py-2">
                                                @item.StatusText
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-alt fa-5x text-muted mb-4"></i>
            <h4 class="text-muted">Please select a date range and click Confirm to view execution details</h4>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("globalSearch");
            const tableBody = document.getElementById("tableBody");
            const rows = Array.from(tableBody.querySelectorAll("tr[data-module]"));
            const recordInfo = document.getElementById("recordInfo");

            function filterTable() {
                const filter = searchInput.value.toLowerCase();
                let visibleCount = 0;

                rows.forEach(row => {
                    const moduleName = row.getAttribute("data-module");
                    if (moduleName.includes(filter)) {
                        row.style.display = "";
                        visibleCount++;
                    } else {
                        row.style.display = "none";
                    }
                });

                // Update serial numbers for visible rows only
                let serial = 1;
                rows.forEach(row => {
                    if (row.style.display !== "none") {
                        row.querySelector(".serial-no").textContent = serial++;
                    }
                });

                recordInfo.textContent = `Showing ${visibleCount} matching record(s)`;
            }

            // Initial display
            filterTable();

            // Live search
            searchInput.addEventListener("input", filterTable);
        });
    </script>
}